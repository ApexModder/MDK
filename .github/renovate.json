{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>neoforged/actions:renovate_preset"
  ],
  "baseBranches": ["!/main/"],
  "additionalBranchPrefix": "{{baseBranch}}-",
  "maven": { "enabled": true },
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "matchPackageNames": ["net.neoforged:neoforge"],
      "enabled": false
    },
    {
      "matchPackageNames": ["net.neoforged:neoforge"],
      "versioning": "regex:^(?<compatibility>\\d+\\.\\d+)\\.(?<patch>\\d+)(?<prerelease>[\\-a-z]+)?$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^gradle\\.properties$"
      ],
      "depNameTemplate": "net.neoforged:neoforge",
      "matchStrings": [
        "neo_version=(?<currentValue>[\\d\\.\\-a-z]+)$"
      ],
      "datasourceTemplate": "maven"
    }
  ]
}